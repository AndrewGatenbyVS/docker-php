#@IgnoreInspection BashAddShebang

function generateDockerTag
{
    local image_version

    if [ "$TRAVIS_TAG" != "" ]; then
        # Remove any "v"s at the beginning of tag name
        # so that TRAVIS_TAG="v1.0.1" --> image_tag="1.0.1"
        image_version="${TRAVIS_TAG##v}"
    else
        image_version="$TRAVIS_BRANCH"
    fi

    IMAGE_TAG="php:${image_version}"
    echo "Image name : ${IMAGE_ORGANIZATION}/${IMAGE_TAG}"
}
